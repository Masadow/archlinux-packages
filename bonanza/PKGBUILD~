# $Id: pkgbuild-mode.el,v 1.23 2007/10/20 16:02:14 juergen Exp $
# Maintainer: Daichi Shinozaki <dsdseg@gmail.com>
pkgname=bonanza
pkgver=6.0
pkgrel=1
pkgdesc="The Computer Shogi Program"
arch=('i686' 'x86_64')
url="http://www.geocities.jp/bonanza_shogi/"
source=("http://www.geocities.jp/bonanza_shogi/${pkgname}_v${pkgver}.zip"
'bonanza')
license=('GPL')
install="bonanza.install"
md5sums=('7e993748c8fd596dc6756e04c4732b5c'
         '7a62aadc75302eddd0e4eeb8d69fe706')

build() {
  cd ${pkgname}_v$pkgver/src/client

  make gcc
}

package() {
  cd ${pkgname}_v$pkgver

  mkdir -m755 -p $pkgdir/opt/$pkgname/log
  install -m4755 ./src/client/$pkgname ./winbin/*.bin $pkgdir/opt/$pkgname/
  install -Dm755 $srcdir/$pkgname $pkgdir/usr/bin/$pkgname
}

# vim:set ts=2 sw=2 et:
